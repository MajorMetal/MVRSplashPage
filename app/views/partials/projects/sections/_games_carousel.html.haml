      .item
        .col-12
          %h3 Sweet Escape

        .col-3.col-offset-1
          %img{src: asset_path('gatball-1.jpg')}
        .col-4
          .embed
            %iframe{src: 'https://www.youtube.com/embed/TuapDf6Un7M', allowfullscreen: 'true'}
        .col-3
